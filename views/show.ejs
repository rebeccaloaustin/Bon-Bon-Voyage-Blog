<%- include('partials/header') %>
    <body class="showBody">
        <h1 class="addTitle" id="showTitle"><%=blog.title; %></h1>
        <nav>
            <a class="editIcon" title="edit article" href="/blog/<%=blog._id %>/edit"><i class="fa-regular fa-pen-to-square"></i></a>
        </nav>
        <form class="trashIcon" id="deleteBtn" action="/blog/<%=blog._id %>?_method=DELETE" method="POST">
            <button type="submit" class="deleteButton" title="delete article"> 
                <i class="fa-regular fa-trash-alt"></i>
            </button>
        </form>
        <p class="blogContent" id="blogContent"><%=blog.content; %></p>
        <img class="showImg" id="showImgThree" src="<%=blog.imgThree%>" />
        <p class="blogContent" id="blogContentTwo"><%=blog.contentTwo; %></p>
        <p class="showQuote"><%=blog.quote; %></p>
        <img class="showImg" id="showImgTwo" src="<%=blog.imgTwo%>" />
        <img class="showImg" id="showImgOne" src="<%=blog.img%>" />
        <img class="showImg" id="showImgFour" src="<%=blog.imgFour%>" />
        
        <p id="publishedDate" > Published: <%=blog.createdAt; %>.</p>
        
        <nav>
            <a class="addBlog" id="backToBlog" href="/blog">Back to blog</a>
        </nav>
    </body>
</html>
<%- include('partials/footer') %>